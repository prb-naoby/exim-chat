# .env.example - Template for environment variables
# Copy this file to .env and fill in your actual values

# Microsoft Graph / OneDrive Configuration
# Get these from Azure Portal > App registrations
MS_TENANT_ID=your_tenant_id_here
MS_CLIENT_ID=your_client_id_here
MS_CLIENT_SECRET=your_client_secret_here
ONEDRIVE_DRIVE_ID=your_drive_id_here

# OneDrive Folder Paths (relative to drive root)
INSW_FOLDER_PATH=AI/INSW
SOP_FOLDER_PATH=AI/SOP

# OCR Service Configuration (for SOP PDF processing)
OCR_SERVICE_URL=https://your-ocr-service.com/ocr
OCR_API_KEY=your_ocr_api_key_here

# INSW Qdrant Configuration
# For local Qdrant: http://localhost:6333
# For Qdrant Cloud: https://your-cluster.qdrant.io
INSW_QDRANT_URL=http://localhost:6333
INSW_QDRANT_API_KEY=your_qdrant_api_key_here
INSW_QDRANT_COLLECTION_NAME=insw_regulations

# SOP Qdrant Configuration
SOP_QDRANT_URL=http://localhost:6333
SOP_QDRANT_API_KEY=your_qdrant_api_key_here
SOP_QDRANT_COLLECTION_NAME=sop_documents

# Embedding Model Configuration (Google Gemini)
# Latest model: models/text-embedding-004 (768 dimensions)
EMBEDDING_MODEL=models/text-embedding-004
GEMINI_API_KEY=your_google_ai_studio_api_key_here
VECTOR_SIZE=768

# Database Configuration
DATABASE_PATH=chat_history.db

# Application Configuration
DEBUG=False
LOG_LEVEL=INFO
